<p id="notice"><%= notice %></p>

<div class="display-articles">
  <h3 class="title-articles">Tous les articles</h3>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td><%= link_to 'Show', article, class: "btn-article" %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn-article" %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-article"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path, class: "btn-new-article"%>
</div>